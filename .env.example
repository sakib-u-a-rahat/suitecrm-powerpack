# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# External MySQL 8 Database Configuration
# For external database (e.g., host MySQL, AWS RDS, DigitalOcean, etc.)
SUITECRM_DATABASE_HOST=host.docker.internal
SUITECRM_DATABASE_PORT_NUMBER=3306
SUITECRM_DATABASE_NAME=suitecrm
SUITECRM_DATABASE_USER=suitecrm
SUITECRM_DATABASE_PASSWORD=your_secure_password

# SuiteCRM Admin Credentials
SUITECRM_USERNAME=admin
SUITECRM_PASSWORD=your_admin_password

# SuiteCRM Site URL
SUITECRM_SITE_URL=http://localhost:8080

# MySQL SSL Configuration (for managed databases like DigitalOcean)
# Set MYSQL_CLIENT_ENABLE_SSL=yes and provide path to CA certificate
# Mount the certificate file into the container and set the path here
MYSQL_CLIENT_ENABLE_SSL=no
# MYSQL_SSL_CA=/opt/bitnami/mysql/certs/ca-certificate.crt

# Example for DigitalOcean Managed MySQL:
# MYSQL_CLIENT_ENABLE_SSL=yes
# MYSQL_SSL_CA=/opt/bitnami/mysql/certs/ca-certificate.crt
# Then mount your CA cert: -v /path/to/ca-certificate.crt:/opt/bitnami/mysql/certs/ca-certificate.crt:ro
